= simple_form_for @person, :html => { :class => 'form-horizontal' } do |f|
  
  = f.input :name
  = f.input :email

  .form-actions
    = f.submit nil, :class => 'btn btn-primary'
    = link_to t('.cancel', :default => t("helpers.links.cancel")), |
      people_path, :class => 'btn'                               |